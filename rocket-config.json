{
    "inputDir": "source",
    "outputDir": "deploy",
    "defaultBuildOrder": "build",
    "buildOrders": [

        {
            "id": "build",
            "items": [
                { "buildOrder": ["libraries", "scripts", "images", "styles"] }
            ]
        },

        {
            "id": "libraries",
            "items": [
                {
                    "input": [
                        "js/libs/jquery-1.11.0.min.js",
                        "js/libs/modernizr-2.7.1.min.js",
                        "js/libs/FileSaver.js"
                    ],
                    "minify": false,
                    "output": "js/libraries.js"
                }
            ]
        },

        {
            "id": "scripts",
            "items": [
                {
                    "input": "js/script.js",
                    "minify": false,
                    "output": "js/script.js"
                }
            ]
        },

        {
            "id": "images",
            "items": [
                "img"
            ]
        },

        {
            "id": "styles",
            "items": [
                {
                    "input": "css/reset.css",
                    "minify": false,
                    "output": "css/reset.css"
                },
                {
                    "input": "sass/master.sass",
                    "output": "css/master.css"
                }
            ]
        }
    ]
}
